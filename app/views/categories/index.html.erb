<% if logged_in? %> 
<table class="table table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>類別</th>
      <th>修改</th>
      <th>新增</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to '修改', edit_category_path(category) %></td>
      <td><%= link_to '新增', new_category_path %></td>     
      <td><%= link_to '刪除', category, method: :delete, data: { confirm: '確定要刪除類別?' } %></td>  
    </tr>
  <% end %>
  </tbody>
 </table>
<% end %> 
