<% if logged_in? %> 
<div class="well">
  <%= form_for(category) do |f|%>
    <div class="form-group">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, html: {class: "form-control"} %>
    </div>

    <br>
    <%= f.submit(@category.new_record? ? '新增類別' : '修改類別', class:"btn btn-primary") %>
  <% end %>
</div>
<% end %>

