<% if logged_in? %> 
<div class="well">
  <%= form_for(comment)  do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content %>
    </div>

    <div class="form-group">
      <%= f.label :post_id %>
      <br>
      <%= f.text_field :post_id %>
    </div>

    <div class="form-group">
      <%= f.label :user_id %>
      <br>
      <%= f.text_field :user_id %>
    </div>
    
    <br>
    <%= f.submit(@comment.new_record? ? '新增回應' : '修改回應', class:"btn btn-primary") %>
  <% end %>
</div>

<% end %>