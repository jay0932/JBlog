<% if logged_in? %> 
  <div class="well">
    <%= form_for(post)  do |f| %>
      <div class="form-group">
        <%= f.label :主題 %>
        <br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :內容 %>
        <br>
        <%= f.text_area :content %>
      </div>
      
      <% #不知道怎麼把類別加入與抓出類別 %>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :類別 %>
          <br>
        <%= collection_select(:Category, :category_id, Category.all, :id, :name) %>
        </div>
      <% end %>

      <br>

      <%= f.submit(@post.new_record? ? '新增文章' : '修改文章', class:"btn btn-primary") %>
    <% end %>
  </div>

<% end %>