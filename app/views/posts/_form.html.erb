<%= form_for(post) do |f| %>
	<div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>
	<%= f.submit(@post.new_record? ? '新增文章' : '修改文章', class:"btn btn-primary") %>
<% end %>