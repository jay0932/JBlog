<% if logged_in? %> 
<div class="well">
  <%= form_for(post)  do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content %>
    </div>
    
    <br>
    <%= f.submit(@post.new_record? ? '新增文章' : '修改文章', class:"btn btn-primary") %>
  <% end %>
</div>

<% end %>