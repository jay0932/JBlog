<h1> users index </h1>
  <table>
<% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to '修改', edit_user_path(user) %></td>
      <td><%= link_to '新增', new_user_path %></td>
      <td><%= link_to '刪除', user, method: :delete, data: { confirm: '確定要刪除使用者?' } %></td>
      
    </tr>
<% end %>
  </table>
