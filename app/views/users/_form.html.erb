<% if logged_in? %> 
<div class="well">
  <%= form_for(user) do |f|%>
    <div class="form-group">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, html: {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <br>
      <%= f.text_field :password, html: {class: "form-control"} %>
    </div>
    <br>
    <%= f.submit(@user.new_record? ? '新增使用者' : '修改使用者', class:"btn btn-primary") %>
  <% end %>
</div>
<% end %>
